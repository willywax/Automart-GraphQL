{
  "name": "automart_api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "babel -d ./build ./src",
    "prebuild": "rm -rf build/*",
    "start": "NODE_ENV=production node ./build/index.js",
    "prestart": "npm run build",
    "prod": "babel-node ./src/index.js",
    "dev": "nodemon --exec babel-node ./src/index.js",
    "debug": "nodemon --inspect-brk --exec babel-node ./src/index.js",
    "test": "npm run migrate:dev && nyc mocha ./src/test/**/**.js --require @babel/register --recursive --timeout 10000 --exit",
    "coverage": "nyc --reporter=lcov  npm test",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "lint": "eslint '/src/**/*.js'",
    "lint:fix": "prettier-eslint '/src/**/*.js' --write",
    "migrate:dev": "sequelize db:migrate:undo:all && sequelize db:migrate && npm run seed --env development",
    "seed": "sequelize db:seed:all"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:fix",
      "git add"
    ]
  },
  "author": "willywax",
  "license": "ISC",
  "dependencies": {
    "@babel/cli": "^7.7.0",
    "@babel/core": "^7.5.5",
    "@babel/node": "^7.5.5",
    "@babel/polyfill": "^7.4.4",
    "@babel/preset-env": "^7.5.5",
    "@babel/register": "^7.5.5",
    "bcrypt": "^3.0.6",
    "body-parser": "^1.19.0",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "dotenv": "^8.0.0",
    "express": "^4.17.0",
    "express-graphql": "^0.9.0",
    "express-validator": "^5.3.1",
    "graphql": "^15.0.0",
    "jsonwebtoken": "^8.5.1",
    "mocha": "^10.2.0",
    "nyc": "^14.1.1",
    "pg": "^7.11.0",
    "sequelize": "^5.19.4",
    "sequelize-cli": "^5.5.1",
    "swagger-ui": "^3.24.2",
    "swagger-ui-express": "^4.0.6",
    "upgrade": "^1.1.0",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "coveralls": "^3.0.3",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.2",
    "husky": "^2.3.0",
    "lint-staged": "^8.1.7",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.19.3",
    "prettier-eslint": "^8.8.2",
    "prettier-eslint-cli": "^4.7.1"
  }
}
